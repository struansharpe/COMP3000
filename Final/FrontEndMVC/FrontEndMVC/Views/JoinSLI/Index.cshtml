    </tr>

@foreach (var item in Model) {
<tr>
    <td>@Html.DisplayFor(model => item.GetShoppingListItem.IID)</td>
    <td>@Html.DisplayFor(model => item.GetItem.ItemName)</td>
    <td>@Html.DisplayFor(model => item.GetShoppingListItem.QTY)</td>
    <td>@Html.DisplayFor(model => item.GetShoppingListItem.SLID)</td>
    <td>@Html.DisplayFor(model => item.GetShoppingListItem.SLIID)</td>
    <td>@Html.DisplayFor(model => item.GetShoppingListItem.Urgent)</td>
    <td>@Html.ActionLink("Filter by Shopping List", "FilterByShoppingList", new { id = item.GetShoppingListItem.SLID })</td>
    @*<td>@item.GetItem.IID</td>*@

</tr>
}

</table>
