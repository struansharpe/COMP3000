@model IEnumerable<FrontEndMVC.Models.JoinSLI>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.GetShoppingListItem.IID)</th>
        <th>@Html.DisplayNameFor(model => model.GetItem.ItemName)</th>
        <th>@Html.DisplayNameFor(model => model.GetShoppingListItem.QTY)</th>
        <th>@Html.DisplayNameFor(model => model.GetShoppingListItem.SLID)</th>
        <th>@Html.DisplayNameFor(model => model.GetShoppingListItem.SLIID)</th>
        <th>@Html.DisplayNameFor(model => model.GetShoppingListItem.Urgent)</th>
