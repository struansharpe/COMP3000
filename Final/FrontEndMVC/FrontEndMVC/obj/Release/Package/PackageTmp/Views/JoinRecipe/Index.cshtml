@model IEnumerable<FrontEndMVC.Models.JoinRI>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Item</th>
        <th>ItemName</th>
        <th>QTY</th>
        <th>RecipeID</th>
        <th>RecipeIID</th>
        <th>Weight</th>

        
    </tr>

@foreach (var item in Model) {
<tr>
    <td>@item.GetRecipeItem.Item </td>
    <td>@item.GetItem.ItemName </td>
    <td>@item.GetRecipeItem.QTY </td>
    <td>@item.GetRecipeItem.RecipeID </td>
    <td>@item.GetRecipeItem.RecipeIID </td>
    <td>@item.GetRecipeItem.Weight </td>

    
</tr>
}

</table>
