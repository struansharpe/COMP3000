@model IEnumerable<FrontEndMVC.Models.ItemType>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ITID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ITName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ITID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ITName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.ITID }) |
            @Html.ActionLink("Details", "Details", new {  id=item.ITID }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.ITID })
        </td>
    </tr>
}

</table>
